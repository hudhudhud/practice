/* components/inputPayPsw/index.wxss */
.mask {
    z-index: 10;
    position: fixed;
    width: 100%;
    height: 100%;
    left: 0;
    top: 0;
    background-color: rgba(0, 0, 0, .5);
    display: none;
}
.mask.show{
    display: block;
}
.content {
    position: fixed;
    z-index: 11;
    bottom: 0;
    left: 0;
    width: 100%;
    background-color: #fff;
    transform: translateY(100%);
    transition: transform .3s ease-out;
}
.content.show{
    transform: translateY(0);
}
.title{
    border-bottom: 1px solid #D6D6D7;
    margin-bottom: 20rpx;
    font-size: 32rpx;
    height: 84rpx;
    line-height: 84rpx;
    text-align: center;
    font-weight: bold;
}
.boxs{
    display: flex;
    display: -webkit-flex;
    justify-content: center;
    align-items: center;
}
.box {
    width: 120rpx;
    height: 120rpx;
    line-height: 120rpx;
    box-sizing: border-box;
    border: 1px solid #D6D6D7;
    font-size: 60rpx;
    font-weight: bold;
    text-align: center;
}
.box:nth-of-type(n+2){
    border-left: none;
}
.tip {
    color: #ff2c6d;
    margin-top: 10rpx;
    margin-right: 20rpx;
    text-align: right;
}
.deleteImg{
    width: 48rpx;
    height: 36rpx;
}
.keyboard{
    margin-top: 20rpx;
    background-color: #F2F1F1;
    display: flex;
    display: -webkit-flex;
    padding: 0 12rpx 6rpx;
    justify-content: space-between;
    flex-wrap: wrap;
}
.btn{
    box-shadow:0 2rpx 0 0 rgba(132,134,136,1);
    border-radius:10px;
    margin-top: 12rpx;
    width: 234rpx;
    height: 92rpx;
    background-color: #fff;
    font-weight: bold;
}
.btn.special{
    background: none;
    box-shadow: none;
}

.ipx {
    padding-bottom: 68rpx;
}
