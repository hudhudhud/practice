/* components/prompt/index.wxss */
.mask {
    z-index: 10;
    position: fixed;
    width: 100%;
    height: 100%;
    left: 0;
    top: 0;
    background-color: rgba(0, 0, 0, .5);
}
.title{
    line-height: 100rpx;
    text-align: center;
    font-size: 32rpx;
    font-weight: bold;
}
.content {
    box-sizing: border-box;
    margin: 306rpx auto;
    width: 650rpx;
    background-color: #fff;
    border-radius: 10rpx;
    padding: 1rpx 48rpx 68rpx;
}

.content input {
    margin-top: 100rpx;
    font-size: 30rpx;
    border-bottom: 1px solid #f2f2f2;
}
.btns {
    margin-top: 72rpx;
    display: flex;
    display: -webkit-flex;
    justify-content: center;
}
.btn {
    margin: 0 34rpx;
    width: 200rpx;
    height: 60rpx;
    line-height: 60rpx;
    text-align: center;
    font-size: 32rpx;
    color: #333333;
    border-radius: 32rpx;
    background-color: #E1E1E1;
}
.btn.full{
    color: #fff;
    background: -webkit-linear-gradient(left, #ff2c6d, #ff942f); /* Safari 5.1 - 6.0 */
    background: -o-linear-gradient(right, #ff2c6d, #ff942f); /* Opera 11.1 - 12.0 */
    background: -moz-linear-gradient(right, #ff2c6d, #ff942f); /* Firefox 3.6 - 15 */
    background: linear-gradient(to right, #ff2c6d, #ff942f); /* 标准的语法 */
}
