/* components/setPayPsw/index.wxss */

.back {
  position: fixed;
  width: 100%;
  height: 100%;
  left: 0;
  top: 0;
  background-color: rgba(0, 0, 0, 0.5);
  z-index: 100;
}

.block {
  position: relative;
  width: 662rpx;
  background-color: #fff;
  margin: 76rpx auto 0;
  border-radius: 10rpx;
  padding-bottom: 78rpx;
}
.close{
  width: 26rpx;
  height: 26rpx;
  position: absolute;
  right: 20rpx;
  top: 20rpx;
}

.title {
  height: 110rpx;
  line-height: 110rpx;
  font-size: 32rpx;
  color: #333;
  text-align: center;
}

.tip {
  margin: 0 auto;
  width: 557rpx;
  font-size: 24rpx;
  color: #666;
}

.item {
  width: 582rpx;
  height: 102rpx;
  margin: 30rpx auto 0;
  background-color: #f5f5f5;
  display: flex;
  display: -webkit-flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 20rpx;
  box-sizing: border-box;
  border-radius: 10rpx;
}

.code {
  font-size: 28rpx;
  color: #666;
}
.code.num{
  font-size: 22rpx;
}

.psw-tip {
  margin: 20rpx 0 0 40rpx;
  font-size: 28rpx;
  color: #999;
}

.submit {
  width: 512rpx;
  height: 88rpx;
  line-height: 88rpx;
  margin: 80rpx auto 0;
  text-align: center;
  font-size: 32rpx;
  color: #fff;
  border-radius: 44rpx;
  outline: none;
  background: -webkit-linear-gradient(left, #ff2c6d, #ff942f); /* Safari 5.1 - 6.0 */
  background: -o-linear-gradient(right, #ff2c6d, #ff942f); /* Opera 11.1 - 12.0 */
  background: -moz-linear-gradient(right, #ff2c6d, #ff942f); /* Firefox 3.6 - 15 */
  background: linear-gradient(to right, #ff2c6d, #ff942f); /* 标准的语法 */
}
