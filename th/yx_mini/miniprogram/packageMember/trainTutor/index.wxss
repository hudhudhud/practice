/* packageProfile/trainTutor/index.wxss */
page {
    background-color: #fff;
}
.trainTutorTab{
  width:100%;
  height:100rpx;
  background:rgba(255,255,255,1);
  box-shadow:0rpx 8rpx 12rpx 0rpx rgba(229,229,229,0.47);
  display: flex;
  justify-content: space-around;
  align-items: center;
}
.trainTutorTabItem{
  overflow: hidden;
}
.trainTutorTab_top{
  height:42rpx;
  font-size:30rpx;
  font-family:PingFangSC-Medium;
  font-weight:400;
  color:rgba(177,177,177,1);
  line-height:42rpx;
  padding-top: 30rpx;
}
.trainTutorTab_bottom{
  width:44rpx;
  height:8rpx;
  background:#fff;
  border-radius:6rpx;
  margin: 0 auto;
  margin-top: 20rpx;
}
.trainTutorTabItemActive .trainTutorTab_top{
  font-weight:600;
  color:rgba(60,60,60,1);
}
.trainTutorTabItemActive .trainTutorTab_bottom{
  background:rgba(255,47,69,1);
}
.trainTutorBox{
  background-color: #fff;
  width: 100%;
  margin-top: 90rpx;
}
.trainTutorPostBox{
  width: 100%;
  padding: 65rpx 0;
}
.trainTutorPost{
  width:620rpx;
  height:800rpx;
  background:rgba(255,255,255,1);
  box-shadow:0rpx 0rpx 30rpx 0rpx rgba(223,223,223,1);
  border-radius:20rpx;
  margin: 0 auto;
  position: relative;
}
.trainTutorPostPhoto{
  position: absolute;
  top: -100rpx;
  left: 210rpx;
  display: block;
  border-radius: 50%;
  overflow: hidden;
  width:200rpx;
  height:200rpx;
}
.trainTutorPostName{
  height:42rpx;
  font-size:30rpx;
  font-weight:500;
  color:rgba(60,60,60,1);
  line-height:42rpx;
  padding-top: 120rpx;
  width: 580rpx;
  margin: 0 auto;
  text-align: center;
}
.trainTutorPostTwoCode{
  display: block;
  width:480rpx;
  height:480rpx;
  margin: 0 auto;
  margin-top: 60rpx;
}
.saveImgBtn{
  width:650rpx;
  height:78rpx;
  line-height: 78rpx;
  background:linear-gradient(132deg,rgba(255,44,109,1) 0%,rgba(255,176,47,1) 100%);
  border-radius:39rpx;
  font-size:30rpx;
  font-family:PingFangSC-Semibold;
  font-weight:600;
  color:rgba(255,255,255,1);
  text-align: center;
  margin: 0 auto;
  margin-top: 210rpx;
  margin-bottom: 40rpx;
}
.canvasBox{
  position: fixed;
  top: -2000rpx;
  left: 0;
}
.canvas_img{
  display: block;
  margin: 0 auto;
  width: 750rpx;
  height: 1062rpx;
} 