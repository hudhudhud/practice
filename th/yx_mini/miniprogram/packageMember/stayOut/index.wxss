.bal_headerBg{
  width: 100%;
  height: 300rpx;
  display: block;
}
.balHeader{
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 300rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.balHeaderCon{
  font-family:PingFangSC-Semibold;
  color:rgba(255,255,255,1);
  text-align: center;
}
.balHeaderCon_top{
  height:84rpx;
  font-size:60rpx;
  font-family:PingFangSC-Semibold;
  font-weight:600;
  color:rgba(255,255,255,1);
  line-height:84rpx;
}
.bal_money_fh{
  font-size:54rpx;
}
.balHeaderCon_bottom{
  height:42rpx;
  font-size:30rpx;
  font-weight:600;
  line-height:42rpx;
}
.baldetailTittle{
  height:42rpx;
  font-size:30rpx;
  font-family:PingFangSC-Semibold;
  font-weight:600;
  color:rgba(51,51,51,1);
  line-height:42rpx;
  padding-top: 40rpx;
  padding-left: 20rpx;
}
.baldetailBox{
  background-color: #fff;
}
.baldetailTabBox{
  display: flex;
  justify-content: space-around;
  width:750rpx;
  height:100rpx;
  background:rgba(255,255,255,1);
  box-shadow:0rpx 8rpx 12rpx 0rpx rgba(229,229,229,0.47);
  margin-top: 20rpx;
}
.baldetailTabItem{
  width: 120rpx;
  text-align:center;
  padding-top: 20rpx;
}
.baldetailTabItem .baldetailTab_top{
  height:42rpx;
  font-size:30rpx;
  font-family:PingFangSC-Regular;
  font-weight:400;
  color:rgba(177,177,177,1);
  line-height:42rpx;
}
.baldetailTabItem .baldetailTab_bottom{
  width:44rpx;
  height:8rpx;
  background:#fff;
  border-radius:6rpx;
  margin: 0 auto;
  margin-top: 10rpx;
}
.baldetailTabItemActive .baldetailTab_top{
  font-weight:600;
  color:rgba(237,27,36,1);
}
.baldetailTabItemActive .baldetailTab_bottom{
  background:rgba(255,47,69,1);
}
.balList{
  width: 100%;
  margin-top: 6rpx;
}
.balListItem{
  display: flex;
  align-items: center;
  justify-content: space-between;
  border-bottom:2rpx solid rgba(242,242,242,1);
  background: #fff;
  padding-bottom: 20rpx;
  padding-top: 30rpx;
}
.balList_left{
  padding-left: 20rpx;
}
.balList_left_c1{
  height:40rpx;
  font-size:28rpx;
  font-family:PingFangSC-Semibold;
  font-weight:600;
  color:rgba(51,51,51,1);
  line-height:40rpx;
}
.balList_left_c2{
  height:36rpx;
  font-size:26rpx;
  font-family:PingFangSC-Regular;
  font-weight:400;
  color:rgba(177,177,177,1);
  line-height:36rpx;
  margin-top: 10rpx;
}
.balList_right{
  height:42rpx;
  font-size:30rpx;
  font-family:PingFangSC-Semibold;
  font-weight:600;
  color:rgba(237,27,36,1);
  line-height:42rpx;
  padding-right: 44rpx;
}