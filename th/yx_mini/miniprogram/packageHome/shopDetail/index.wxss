@import "../../wxParse/wxParse.wxss";
.page {
  padding-bottom: 110rpx;
}
.ipx-page{
  padding-bottom: 178rpx;
}

.swiper {
  height: 750rpx;
}

.slide-image {
  height: 750rpx;
  width: 100%;
}

.block {
  background-color: white;
  overflow: hidden;
}

.title {
  font-size: 36rpx;
  color: #3c3c3c;
  display: flex;
  padding: 20rpx 68rpx 0 28rpx;
}

.new {
  margin-top: 10rpx;
  margin-right: 10rpx;
  font-size: 16rpx;
  color: #fff;
  background-color: #ff2f45;
  height: 28rpx;
  line-height: 28rpx;
  padding: 0 8rpx;
  min-width: 48rpx;
  text-align: center;
  border-radius: 6rpx;
}

.name {
  width: 604rpx;
  font-weight: bold;
}

.price {
  margin-top: 20rpx;
  padding-bottom: 20rpx;
}

.current-price {
  margin: 0 20rpx 0 20rpx;
  color: #ff2f45;
  font-size: 56rpx;
  font-weight: bold;
}

.old-price {
  font-size: 28rpx;
  color: #b1b1b1;
  font-weight: normal;
  text-decoration: line-through;
}

.mt {
  margin-top: 20rpx;
}

.pb {
  padding-bottom: 20rpx;
}

.health {
  height: 112rpx;
  margin-top: 20rpx;
  display: flex;
  align-items: center;
  font-size: 26rpx;
  color: #313131;
  white-space: nowrap;
}

.healthy-img {
  height: 112rpx;
  width: 100rpx;
}

.tag {
  margin-left: 10rpx;
  color: #1fa53d;
  font-size: 20rpx;
  background-color: rgba(31, 165, 61, 0.17);
  border-radius: 4rpx;
  padding: 0 10rpx;
  height: 32rpx;
  line-height: 32rpx;
  min-width: 70rpx;
  text-align: center;
  white-space: nowrap;
}

.text-title {
  color: #3c3c3c;
  margin: 20rpx;
  font-weight: bold;
}

.intro {
  font-size: 28rpx;
  color: #b1b1b1;
  width: 714rpx;
  margin: 0 auto;
}

.row {
  font-size: 28rpx;
  color: #b1b1b1;
  white-space: nowrap;
  margin-bottom: 20rpx;
}

.row .label {
  display: inline-block;
  width: 172rpx;
  color: #3c3c3c;
  margin-right: 20rpx;
  text-align-last: justify;
  text-align: justify;
  text-justify: distribute-all-lines;
}

.buy {
  width: 100%;
  height: 110rpx;
  position: fixed;
  bottom: 0;
  left: 0;
  background-color: #fff;
  display: flex;
  justify-content: flex-end;
  align-items: center;
}

.buy-btn image {
  display: block;
  margin: 0 auto;
  width: 40rpx;
  height: 40rpx;
}

.buy-btn {
  margin-right: 50rpx;
}

.buy-submit {
  width: 510rpx;
  height: 78rpx;
  line-height: 78rpx;
  text-align: center;
  font-size: 32rpx;
  color: #fff;
  background: -webkit-linear-gradient(left, #FF2C6D, #FF942F); /* Safari 5.1 - 6.0 */
  background: -o-linear-gradient(right, #FF2C6D, #FF942F); /* Opera 11.1 - 12.0 */
  background: -moz-linear-gradient(right, #FF2C6D, #FF942F); /* Firefox 3.6 - 15 */
  background: linear-gradient(to right, #FF2C6D, #FF942F); /* 标准的语法 */
  border-radius: 39rpx;
}

.mig{
  z-index: 10;
  width: 100rpx;
  height: 100rpx;
  position: fixed;
  right: 0;
  top: 63%;
  overflow: visible;
}
.mig-img{
  width: 100%;
  height: 100%;
}
.menu{
  position: absolute;
  top: 0;
  left: 6rpx;
  transform: translateY(-100%);
  max-height: 0;
  overflow: hidden;
  transition: max-height .3s ease-out;
}
.menu.show {
  max-height: 500rpx;
}
.menu image {
  display: block;
  width: 88rpx;
  height: 88rpx;
}
.menu button {
  display: block;
}

.ad-img{
  width: 100%;
}
