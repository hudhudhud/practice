/* miniprogram/packageHome/confirmOrder/index.wxss */

.line-8 {
  height: 8rpx;
  background-color: #f2f2f2;
}

.line-20 {
  height: 20rpx;
  background-color: #f2f2f2;
}

page {
  font-size: 26rpx;
  color: #333;
  background-color: #fff;
  padding-bottom: 150rpx;
}

.address {
  height: 152rpx;
  display: flex;
  display: -webkit-flex;
  align-items: center;
  font-size: 24rpx;
  color: #3c3c3c;
  position: relative;
}

.ad-bot {
  width: 100%;
  height: 6rpx;
  position: absolute;
  bottom: 0;
  left: 0;
}

.ad-icon {
  width: 34rpx;
  height: 38rpx;
  margin-left: 20rpx;
}

.ad-info {
  width: 630rpx;
  margin-left: 18rpx;
}

.ad-name {
  margin-bottom: 10rpx;
  display: flex;
  display: -webkit-flex;
  justify-content: space-between;
}

.ac-right {
  position: absolute;
  width: 12rpx;
  height: 24rpx;
  right: 18rpx;
  top: 50%;
  transform: translateY(-50%);
}

/* 商品信息 */

.sub-title {
  font-size: 24rpx;
  color: #bbb;
}

.shop-info {
  font-size: 26rpx;
  color: #333;
}


.remark {
  height: 76rpx;
  display: flex;
  display: -webkit-flex;
  align-items: center;
  padding: 0 20rpx;
}

.remark input {
  flex: 1;
}

.cost {
  padding: 10rpx 0 30rpx;
}

.cost-row {
  padding: 20rpx 20rpx 0 20rpx;
  display: flex;
  display: -webkit-flex;
  justify-content: space-between;
}

.total {
  font-size: 30rpx;
  font-weight: bold;
}

.total-count {
  font-size: 30rpx;
  color: #ed1b24;
  font-weight: bold;
}

.pay-discount {
}

.pay-title {
  font-weight: bold;
  font-size: 30rpx;
  margin: 30rpx 20rpx;
}

.discount {
  height: 110rpx;
  display: flex;
  display: -webkit-flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 60rpx 0 20rpx;
}

.discount:nth-of-type(n+3) {
  border-top: 1px solid #f2f2f2;
}

.dis-icon {
  width: 36rpx;
  height: 36rpx;
  margin-right: 20rpx;
  vertical-align: middle;
}

.dis-type {
  vertical-align: middle;
}

.dis-intro {
  margin-top: 10rpx;
  font-size: 24rpx;
  color: #999;
}

.select {
  width: 50rpx;
  height: 50rpx;
  vertical-align: middle;
  text-align: right;
}

.select image {
  display: inline-block;
  width: 32rpx;
  height: 32rpx;
}

.float-bottom {
  border-top: 1px solid #f2f2f2;
  padding-left: 30rpx;
  background-color: #fff;
  height: 98rpx;
  width: 100%;
  position: fixed;
  bottom: 0;
  left: 0;
  display: flex;
  display: -webkit-flex;
  align-items: center;
  justify-content: space-between;
}

.submit {
  width: 300rpx;
  height: 98rpx;
  line-height: 98rpx;
  text-align: center;
  font-size: 30rpx;
  color: #fff;
  background: -webkit-linear-gradient(left, #ff2c6d, #ff942f); /* Safari 5.1 - 6.0 */
  background: -o-linear-gradient(right, #ff2c6d, #ff942f); /* Opera 11.1 - 12.0 */
  background: -moz-linear-gradient(right, #ff2c6d, #ff942f); /* Firefox 3.6 - 15 */
  background: linear-gradient(to right, #ff2c6d, #ff942f); /* 标准的语法 */
}
.disabled.submit {
  background: #DDDDDD;
}
.bot-total{
  font-size: 30rpx;
}
.shop-count {
  font-size: 22rpx;
  color: #999999;
}

.inviter{
  height: 80rpx;
  display: flex;
  display: -webkit-flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 20rpx;
  box-sizing: border-box;
}
.inviter-icon{
  width: 12rpx;
  height: 24rpx;
}
