/* miniprogram/packageProfile/addressAdd/index.wxss */

.item {
  position: relative;
  padding: 20rpx;
  border-top: 1px solid #f2f2f2;
}

.item input {
  display: inline-block;
  vertical-align: middle;
  margin-left: 20rpx;
}

.item label {
  vertical-align: middle;
}

.ar_right {
  position: absolute;
  right: 48rpx;
  top: 50%;
  transform: translateY(-50%);
  width: 12rpx;
  height: 24rpx;
}

.default{
  margin-top: 20rpx;
  padding: 0 20rpx;
  align-items: center;
  height: 82rpx;
  display: flex;
  display: -webkit-flex;
  justify-content: space-between;
}
