/* miniprogram/packageProfile/express/index.wxss */
.block{
    margin-top: 20rpx;
    font-size: 26rpx;
    padding: 10rpx 40rpx 20rpx 40rpx;
}
.item{
    margin-top: 10rpx;
    position: relative;
}
.copy{
    position: absolute;
    right: 40rpx;
    top: 50%;
    transform: translateY(-50%);
    color: #ed1b24;
    font-size: 24rpx;
    font-weight: bold;
}
.item text {
    color: #999999;
}
label{
    white-space: nowrap;
}
.flex{
    display: flex;
}
.info{
    background-color: #fff;
    margin-top: 20rpx;
}
.title{
    height: 76rpx;
    display: flex;
    display: -webkit-flex;
    justify-content: space-between;
    align-items: center;
    padding: 0 20rpx;
    font-size: 26rpx;
    color: #333;
    font-weight: bold;
}

.refresh{
    font-size: 24rpx;
    height: 52rpx;
    line-height: 50rpx;
    padding: 0 16rpx;
    font-weight: normal;
    border: 1px solid #999;
    border-radius: 26rpx;
    margin-right: 10rpx;
}

.detail{
    margin: 0 20rpx;
    border-top: 1px solid #F1F4F3;
    padding: 20rpx 0;
    font-size: 26rpx;
    color: #bbbbbb;
}
.time{
    margin-top: 10rpx;
    font-size: 22rpx;
}


.important.detail{
    color: #333;
}
